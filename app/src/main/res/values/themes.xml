<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ghroem_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="itemTextAppearance">@style/CustomTextFont</item>
        <item name="itemTextAppearanceActive">@style/CustomTextFont</item>
        <item name="itemTextAppearanceInactive">@style/CustomTextFont</item>
    </style>

    <style name="CustomTextFont"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/product_sans</item>
    </style>

</resources>